// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette

{
  "show_inline_completions": false,
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  // "collaboration_panel": {
  //   "dock": "right"
  // },
  // "chat_panel": {
  //   "dock": "right"
  // },
  "notification_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "right"
  },
  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Cascadia Code",
  "editor_font_family": "Cascadia Code",
  "editor_font_size": 16,
  //JetBrainsMono Nerd Font, Cascadia Code, FiraCode Nerd Font,SpaceMono Nerd Font,SauceCodePro Nerd Font,AnonymicePro Nerd Font,
  "terminal": {
    "dock": "bottom",
    "font_family": "SpaceMono Nerd Font",
    "font_size": 15
  },
  "ui_font_size": 15,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Espresso (Blur)"
  },
  "autosave": "on_focus_change",
  "cursor_shape": "bar",
  "cursor_blink": true,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "file_icons": "true"
}
